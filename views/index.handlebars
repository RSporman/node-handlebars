<h1>Bobs Burgers</h1>
<div class="container-fluid">
  <div class="row">
    <div class="col-4">
      <h2 class="listHeaders">Waiting To be Devoured!</h2>
      <ul>
        {{#each burgers}}
        {{#if devour}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

    <div class="card col-4" class="column-card">
      <h2 id="cardHeader"> Add a New Burger </h2>
      <form class="create-form">

        <div class="form-group">
          <input type="text" id="ca" name="name">
        </div>

        <div class="form-group">
          <input type="radio" name="devour" value="1" checked> Add to waiting<br>
          <input type="radio" name="devour" value="0"> Devoured Already!
        </div>

        <button class="btn btn-primary" type="submit">Add a New Burger</button>
      </form>
    </div>

    <div class="col-4">
      <h2 class="listHeaders">Devoured!</h2>
      <ul>
        {{#each burgers}}
        {{#unless devour}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>